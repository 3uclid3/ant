{
  "name": "ant (local Dockerfile)",
  "build": {
    "dockerfile": "../../Dockerfile",
    "target": "dev",
    "args": {
      "LLVM_VERSION": "21",
      "GCC_VERSION": "14"
    }
  },
  "mounts": [
    "source=${localEnv:HOME}/.codex,target=/home/ubuntu/.codex,type=bind"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "DavidAnson.vscode-markdownlint",
        "eamodio.gitlens",
        "github.vscode-github-actions",
        "jebbs.plantuml",
        "llvm-vs-code-extensions.vscode-clangd",
        "openai.chatgpt",
        "redhat.vscode-yaml",
        "tboox.xmake-vscode",
        "vadimcn.vscode-lldb"
      ]
    }
  }
}